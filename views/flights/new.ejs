<%- include('../partials/header') %>
<section>
  <h2>Add New Flight</h2>
  <form action="/flights" method="POST">
    <label>Airline:</label>
    <select name="airline" required>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
        <option value="QANTAS">QANTAS</option>
        <option value="Alaskan">Alaskan</option>
    </select>
    
    <label>Airport:</label>
    <select name="airport" required>
        <option value="AUS">Austin (AUS)</option>
        <option value="LAX">Los Angeles (LAX)</option>
        <option value="JFK">New York City (JFK)</option>
        <option value="MEL">Melbourne (MEL)</option>
        <option value="SYD">Sydney (SYD)</option>
        <option value="LAS">Las Vegas (LAS)</option>
        <option value="DFW">Dallas Fort Worth (DFW)</option>
        <option value="DEN" selected>Denver (DEN)</option>
        <option value="SAN">San Deigo (SAN)</option>
    </select>

    <label>Flight Number:</label>
    <input type="number" name="flightNo" min=10 max=9999 required>

    <label>Date:</label>
    <input type="datetime-local" id="departs" name="departs" value="<%= departsDate %>">

    <input type="submit" value="Add Flight">
  
  </form>
  <a href="/flights"><button>Go Back</button></a>
</section>

<%- include('../partials/footer') %>